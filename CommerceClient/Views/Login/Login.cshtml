@model CommerceClient.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login failed. Check your login details.");
    <div>
        <fieldset>
            <h4>
                @Html.DisplayFor(m => m.sSessionValue)
            </h4>
            <legend>Login</legend>
            <div class="editor-label">

                @Html.LabelFor(m => Model.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => Model.Name)
                @Html.ValidationMessageFor(m => Model.Name)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => Model.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => Model.Password)
                @Html.ValidationMessageFor(m => Model.Password)
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => Model.RememberMe)
                @Html.LabelFor(m => Model.RememberMe)
            </div>

            @*<input type="submit" value="add" onclick="location.href='@Url.Action("validateCredentials", "Login", Model)'" />*@

            <input type="submit" value="add" />


        </fieldset>

        <h4>
            @Html.DisplayFor(m => Model.sSessionValue)
        </h4>
    </div>
}
